{
  "id": null,
  "uid": null,
  "title": "CI/CD Platform Monitoring",
  "tags": ["cicd", "platform", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "All Services Status",
      "gridPos": {
        "h": 4,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "datasource": null,
      "targets": [
        {
          "expr": "up",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "textMode": "value_and_name",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                },
                "1": {
                  "text": "UP",
                  "color": "green"
                }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "System CPU Usage (%)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      },
      "datasource": null,
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{id=\"/\"}[5m]) * 100",
          "refId": "A",
          "legendFormat": "System CPU"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 400,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "showPoints": "never"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 200, "color": "yellow"},
              {"value": 300, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "System Memory Usage (MB)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 4
      },
      "datasource": null,
      "targets": [
        {
          "expr": "container_memory_usage_bytes{id=\"/\"} / 1024 / 1024",
          "refId": "A",
          "legendFormat": "Memory Used"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 4,
      "type": "gauge",
      "title": "System Memory %",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 12
      },
      "datasource": null,
      "targets": [
        {
          "expr": "(container_memory_usage_bytes{id=\"/\"} / 8323000000) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 70, "color": "yellow"},
              {"value": 90, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Backend Service",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 8,
        "y": 12
      },
      "datasource": null,
      "targets": [
        {
          "expr": "up{job=\"backend\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"text": "DOWN", "color": "red"},
                "1": {"text": "RUNNING", "color": "green"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "type": "stat",
      "title": "Jenkins Service",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 16,
        "y": 12
      },
      "datasource": null,
      "targets": [
        {
          "expr": "up{job=\"jenkins\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"text": "DOWN", "color": "red"},
                "1": {"text": "RUNNING", "color": "green"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Backend API Request Rate",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 18
      },
      "datasource": null,
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"backend\"}[5m])",
          "refId": "A",
          "legendFormat": "{{method}} {{handler}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Backend Response Time (P50, P90, P99)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 18
      },
      "datasource": null,
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"backend\"}[5m]))",
          "refId": "A",
          "legendFormat": "P50"
        },
        {
          "expr": "histogram_quantile(0.90, rate(http_request_duration_seconds_bucket{job=\"backend\"}[5m]))",
          "refId": "B",
          "legendFormat": "P90"
        },
        {
          "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"backend\"}[5m]))",
          "refId": "C",
          "legendFormat": "P99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "System Network Receive (bytes/sec)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 26
      },
      "datasource": null,
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{id=\"/\"}[5m])",
          "refId": "A",
          "legendFormat": "{{interface}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 10,
      "type": "timeseries",
      "title": "System Network Transmit (bytes/sec)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 26
      },
      "datasource": null,
      "targets": [
        {
          "expr": "rate(container_network_transmit_bytes_total{id=\"/\"}[5m])",
          "refId": "A",
          "legendFormat": "{{interface}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 11,
      "type": "timeseries",
      "title": "System Disk Usage (bytes)",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 34
      },
      "datasource": null,
      "targets": [
        {
          "expr": "container_fs_usage_bytes{id=\"/\"}",
          "refId": "A",
          "legendFormat": "{{device}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      }
    }
  ]
}
